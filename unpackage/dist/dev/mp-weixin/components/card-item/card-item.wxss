.card_item {
  background: #fff;
  padding: 27rpx;
  -webkit-align-items: start;
          align-items: start;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  position: relative;
}
.card_item .left {
    width: 145rpx;
    height: 145rpx;
    padding: 10rpx;
    border-radius: 50%;
    border: 1px dashed #3167d9;
    margin-right: 30rpx;
    overflow: hidden;
}
.card_item .left image {
      width: 100%;
      height: 100%;
      border-radius: 50%;
}
.card_item .left.isProject {
      width: 156rpx;
      height: 156rpx;
      border-radius: 10rpx;
      border: none;
      padding: 0;
}
.card_item .left.isProject image {
        border-radius: 0;
}
.card_item .right {
    width: 0;
}
.card_item .right .flag {
      font-size: 24rpx;
      padding: 0 27rpx;
      border: 1px solid;
      border-radius: 6rpx;
      position: absolute;
      right: 20rpx;
      top: 25rpx;
}
.card_item .right .flag.type0 {
        color: #f89225;
        border-color: #f89225;
}
.card_item .right .flag.type1 {
        color: #999999;
        border-color: #999999;
}
.card_item .right .flag.type2 {
        color: #31a6e1;
        border-color: #31a6e1;
}
.card_item .right .title {
      width: calc(100% - 180rpx);
      font-size: 30rpx;
      color: #000000;
      line-height: 1;
}
.card_item .right .dec {
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
      margin-top: 25rpx;
}
.card_item .right .dec view {
        width: 50%;
        padding-right: 10rpx;
        margin-bottom: 10rpx;
        box-sizing: border-box;
}
.card_item .right .dec view.half {
        width: 50%;
}
.card_item .right .dec image {
        width: 30rpx;
        height: 30rpx;
        margin-right: 20rpx;
}
.card_item .right .dec text {
        width: calc( 100% - 50rpx);
        font-size: 26rpx;
        color: #666;
}
.card_item .right .dec .w100 {
        width: 100%;
}
.card_item .right .dec .color_blue {
        color: #3167d9;
}

