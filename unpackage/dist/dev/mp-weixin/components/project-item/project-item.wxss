.project_item {
  background: #fff;
  padding: 27rpx;
  -webkit-align-items: start;
          align-items: start;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}
.project_item .left {
    width: 156rpx;
    height: 156rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-right: 30rpx;
}
.project_item .left image {
      width: 100%;
      height: 100%;
}
.project_item .right {
    width: 0;
}
.project_item .right .title {
      width: 100%;
      font-size: 30rpx;
      color: #000000;
      line-height: 1;
}
.project_item .right .dec {
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
      margin-top: 25rpx;
}
.project_item .right .dec view {
        width: 50%;
        padding-right: 10rpx;
        margin-bottom: 10rpx;
        box-sizing: border-box;
}
.project_item .right .dec image {
        width: 30rpx;
        height: 30rpx;
        margin-right: 20rpx;
}
.project_item .right .dec text {
        width: calc( 100% - 50rpx);
        font-size: 26rpx;
        color: #666;
}
.project_item .right .dec .w100 {
        width: 100%;
}
.project_item .right .dec .color_blue {
        color: #3167d9;
}

