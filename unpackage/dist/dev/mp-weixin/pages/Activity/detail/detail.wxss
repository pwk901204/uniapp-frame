.act_detail {
  padding-bottom: 108rpx;
  position: relative;
}
.act_detail .banner {
    height: 300rpx;
}
.act_detail .banner .webView {
      width: 100%;
      height: 100%;
}
.act_detail .banner video {
      width: 100%;
      height: 100%;
}
.act_detail .banner image {
      width: 100%;
      height: 100%;
}
.act_detail .act_title {
    display: block;
    font-size: 34rpx;
    line-height: 94rpx;
    color: #000000;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-weight: bold;
    background: #FFFFFF;
}
.act_detail .cur_line {
    height: 20rpx;
    background: #f3f3f3;
}
.act_detail .act_infor > view {
    border-bottom: 1px solid #e6e6e6;
}
.act_detail .act_infor > view:last-of-type {
    border-bottom: none;
}
.act_detail .act_infor .fontBold {
    font-weight: bold;
}
.act_detail .act_infor .item {
    height: 90rpx;
    padding: 0 30rpx;
    background: #fff;
}
.act_detail .act_infor .item > image {
      width: 30rpx;
      height: 30rpx;
      margin-right: 20rpx;
}
.act_detail .act_infor .item .arrow {
      margin-right: 0rpx;
}
.act_detail .act_infor .item .dec {
      min-width: 0;
      color: #666666;
      font-size: 28rpx;
}
.act_detail .act_infor .item .pre, .act_detail .act_infor .item .end {
      font-size: 28rpx;
      width: 124rpx;
      height: 40rpx;
      text-align: center;
      line-height: 40rpx;
      color: #fff;
      background: linear-gradient(to right, #f9c300, #ffa52f);
      border-radius: 20rpx 0 0 20rpx;
}
.act_detail .act_infor .item .end {
      background: linear-gradient(to right, #999999, #808080);
}
.act_detail .act_infor .item .item_ell {
      width: 60rpx;
      height: 100rpx;
      line-height: 100rpx;
      font-size: 30rpx;
      color: #666;
      font-weight: bold;
      text-align: right;
}
.act_detail .act_infor .apply {
    height: 182rpx;
}
.act_detail .act_infor .apply .apply_list .apply_item {
      margin: 0 10rpx;
}
.act_detail .act_infor .apply .apply_list .apply_item image {
        width: 100rpx;
        height: 100rpx;
        border-radius: 50%;
        margin-bottom: 18rpx;
}
.act_detail .act_infor .apply .apply_list .apply_item text {
        font-size: 26rpx;
        color: #666666;
        line-height: 1;
}
.act_detail > .title {
    padding: 30rpx;
    background: #f3f3f3;
}
.act_detail > .title text {
      font-size: 34rpx;
      line-height: 1;
      color: #000000;
      font-weight: bold;
}
.act_detail .info {
    font-size: 28rpx;
    color: #333;
    padding: 30rpx;
    background: #fff;
}
.act_detail .pro_list {
    background: #fff;
    width: 100%;
    overflow: hidden;
}
.act_detail .pro_list .project_item {
      margin-bottom: 0;
      border-bottom: 1px solid #e6e6e6;
}
.act_detail .cooperation {
    padding: 0 30rpx;
    box-sizing: border-box;
}
.act_detail .cooperation .item {
      padding: 10px 0 40rpx 0;
}
.act_detail .cooperation .item view {
        font-size: 28rpx;
        color: #333;
        line-height: 50rpx;
}
.act_detail .foot {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 98rpx;
}
.act_detail .foot .share, .act_detail .foot .apply_btn {
      width: 50%;
      border: none;
      outline: none;
      color: #FFFFFF;
      font-size: 28rpx;
      border-radius: 0;
}
.act_detail .foot .share::after, .act_detail .foot .apply_btn::after {
        border: none;
}
.act_detail .foot .share {
      background: #3167d9;
}
.act_detail .foot .apply_btn {
      background: #f7aa45;
}
.act_detail .foot .apply_btn.disabled {
        background: #f5f5f5;
        color: #666;
}

