.container {
  min-height: 100vh;
  background: #fff;
}
.application {
  padding-bottom: 98rpx;
}
.application .head {
    background: #fff;
    padding: 30rpx 30rpx 40rpx;
    background: #fff;
}
.application .head .title {
      font-size: 34rpx;
      color: #000000;
      line-height: 1;
}
.application .head .content {
      height: 94rpx;
}
.application .head .content > view image {
        width: 30rpx;
        height: 30rpx;
        margin-right: 10rpx;
}
.application .head .content > view text {
        font-size: 28rpx;
        color: #666666;
}
.application .head .content > view:nth-of-type(1) {
        width: 50%;
}
.application .head .content > view:nth-of-type(2) text {
        width: 0;
}
.application .head .content .pre, .application .head .content .end {
        font-size: 28rpx;
        width: 124rpx;
        height: 40rpx;
        text-align: center;
        line-height: 40rpx;
        color: #fff;
        background: linear-gradient(to right, #f9c300, #ffa52f);
        border-radius: 20rpx 0 0 20rpx;
}
.application .head .content .end {
        background: linear-gradient(to right, #999999, #808080);
}
.application .head .dec {
      font-size: 24rpx;
      color: #999999;
      line-height: 1;
}
.application .cut_line {
    height: 20rpx;
    background: #f3f3f3;
}
.application .form .item {
    height: 87rpx;
    padding: 0 30rpx;
    border-bottom: 1px solid #e6e6e6;
}
.application .form .item label {
      width: 130rpx;
      font-size: 28rpx;
      color: #666666;
}
.application .form .item .form_item input {
      width: 100%;
      text-align: right;
      font-size: 28rpx;
      color: #666666;
}
.application .foot {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}
.application .foot .btn-submit {
      width: 100%;
      height: 98rpx;
      font-size: 32rpx;
      color: #fff;
      background: #3167d9;
      text-align: center;
      line-height: 98rpx;
      border-radius: 0;
}

