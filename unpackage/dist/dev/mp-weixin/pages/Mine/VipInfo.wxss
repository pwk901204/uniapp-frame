.page-vip-info {
  position: relative;
  min-height: 100%;
  height: 100%;
  background-color: #f9f6f1;
}
.page-vip-info .header-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 425rpx;
    z-index: 0;
}
.page-vip-info .header-bg image {
    width: 100%;
    height: 100%;
}
.page-vip-info .vip-header {
    margin: 0 auto;
    padding: 60rpx 20rpx 160rpx 20rpx;
    color: #f1d1a0;
}
.page-vip-info .vip-header .header1 {
      font-size: 28rpx;
      line-height: 28rpx;
      padding-bottom: 30rpx;
}
.page-vip-info .vip-header .header2 {
      font-size: 24rpx;
      line-height: 40rpx;
}
.page-vip-info .vip-info {
    padding: 480rpx 28rpx 0 28rpx;
}
.page-vip-info .vip-info-header {
    padding: 10rpx 0 40rpx 0;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #333333;
}
.page-vip-info .vip-info-header image {
    width: 71rpx;
    height: 14rpx;
}
.page-vip-info .vip-info-header text {
    -webkit-flex-grow: 1;
            flex-grow: 1;
    width: 0;
    text-align: center;
    font-weight: bold;
}
