
.aboutus{
	position: relative;
	background-color: #FFFFFF;
	padding: 0;
	padding-bottom: 100rpx;
	font-size: 28rpx;
	line-height: 45rpx;
	color: #333333;
}
.aboutus-bg{
	position: absolute;
	bottom: 0;
	z-index: 0;
	width: 100%;
	height: 412rpx;
}
.aboutus-bg image{
	width: 100%;
	height: 100%;
}
.aboutus-content{
	position: relative;
	padding-top: 46rpx;
	/* width: 684upx;
	height: 962upx; */
	width: 687rpx;
	height: 1633rpx;
	margin: 0 auto;
	font-size: 28rpx;
	color: #333333;
}
.aboutus-content image{
	position: absolute;
	width: 100%;
	height: 100%;
}
.aboutus-content .aboutus-text{
	padding: 133rpx 36rpx 0 45rpx;
	line-height: 40rpx;
}
.aboutus-content .aboutus-text .text-item{
	text-indent: 2em;
}

