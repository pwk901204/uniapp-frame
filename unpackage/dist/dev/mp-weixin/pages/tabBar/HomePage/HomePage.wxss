.container {
  padding-top: 115rpx;
  padding-bottom: 40rpx;
  background-color: #FFFFFF;
  box-sizing: border-box;
}
.home_page .search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 100;
  background: #fff;
  padding: 20rpx 30rpx 30rpx 30rpx;
}
.home_page .search .search_btn {
    height: 65rpx;
    background: #f5f5f5;
    border-radius: 32rpx;
}
.home_page .search .search_btn text {
      color: #b2b2b2;
      font-size: 26rpx;
}
.home_page .search .search_btn image {
      width: 40rpx;
      height: 40rpx;
      margin-right: 10rpx;
}
.home_page .swiper_wrap {
  margin: 0 30rpx 0rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.home_page .swiper_wrap swiper {
    height: 300rpx;
}
.home_page .swiper_item {
  display: block;
  height: 100%;
}
.home_page .swiper_item image {
    display: block;
    width: 100%;
    height: 100%;
}
.home_page .title {
  padding: 20rpx 30rpx 10rpx;
}
.home_page .title text:nth-of-type(1) {
    font-size: 34rpx;
    color: #000000;
    font-weight: bold;
}
.home_page .title text:nth-of-type(2) {
    font-size: 26rpx;
    color: #666666;
}
.home_page .title image {
    width: 26rpx;
    height: 26rpx;
    margin-left: 10rpx;
}
.home_page .hot_project {
  height: 385rpx;
  box-sizing: border-box;
}
.home_page .hot_project .hot_project_wrap {
    padding: 20rpx 30rpx;
    height: 100%;
    box-sizing: border-box;
}
.home_page .new_project {
  height: 317rpx;
  box-sizing: border-box;
}
.home_page .new_project .new_project_wrap {
    padding: 20rpx 30rpx;
    height: 100%;
    box-sizing: border-box;
}
.home_page .hot_project .item, .home_page .new_project .item {
  width: 217rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  background: #fff;
}
.home_page .hot_project .item image, .home_page .new_project .item image {
    width: 176rpx;
    height: 130rpx;
}
.home_page .hot_project .item text:nth-of-type(1), .home_page .new_project .item text:nth-of-type(1) {
    font-size: 28rpx;
    color: #000000;
    width: 100%;
    text-align: center;
    line-height: 1;
    margin-top: 19rpx;
}
.home_page .hot_project .item text:nth-of-type(2), .home_page .new_project .item text:nth-of-type(2) {
    font-size: 24rpx;
    color: #666;
    width: 100%;
    text-align: center;
    line-height: 1;
    margin-top: 26rpx;
}
.home_page .hot_project .item view, .home_page .new_project .item view {
    width: 100%;
    height: 48rpx;
    background: #3167d9;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    border-radius: 24rpx;
    margin-top: 20rpx;
    line-height: 48rpx;
}
.home_page .activity {
  height: 360rpx;
  box-sizing: border-box;
}
.home_page .activity .activity_wrap {
    height: 100%;
    box-sizing: border-box;
}
.home_page .activity_wrap {
  padding: 20rpx 30rpx 0;
}
.home_page .activity_wrap .item {
    border-radius: 8rpx;
    width: 336rpx;
    height: 320rpx;
    background: #fff;
    overflow: hidden;
}
.home_page .activity_wrap .item:nth-of-type(1) {
      margin-right: 18rpx;
}
.home_page .activity_wrap .item > image {
      width: 100%;
      height: 220rpx;
      display: block;
}
.home_page .activity_wrap .item > view {
      width: 100%;
      margin-top: 10rpx;
}
.home_page .activity_wrap .item > view image {
        width: 30rpx;
        height: 30rpx;
        margin: 0 20rpx;
}
.home_page .activity_wrap .item > view text {
        font-size: 26rpx;
        color: #666666;
        line-height: 1;
}

