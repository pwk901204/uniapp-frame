.myRecommend {
  background-color: #252525;
  height: 100vh;
  position: relative;
}
.myRecommend-wrap {
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
}
.myRecommend-header {
    height: 360rpx;
    padding: 54rpx 75rpx 0 75rpx;
    box-sizing: border-box;
    position: relative;
}
.myRecommend-header image {
      width: 100%;
      height: 100%;
}
.myRecommend-header text {
      font-size: 56rpx;
      letter-spacing: 0.05em;
      color: #815f34;
      margin-top: 66rpx;
      text-align: center;
      line-height: 1.2;
      position: absolute;
      left: 0;
      right: 0;
}
.myRecommend-bg {
    position: absolute;
    top: 0;
}
.myRecommend-main {
    background: #fff;
    margin: 0 30rpx;
    border-radius: 10rpx;
    height: calc(100% - 390rpx);
}
.myRecommend-main .main-title {
      height: 95rpx;
      text-align: center;
      line-height: 95rpx;
      font-size: 30rpx;
      font-weight: bold;
      color: #815f34;
}
.myRecommend .main-list {
    height: calc(100% - 95rpx);
    overflow: auto;
}
.myRecommend .main-list > view {
      margin: 0 30rpx 30rpx 30rpx;
      padding: 25rpx 20rpx 20rpx 30rpx;
      background: #faeed7;
      border-radius: 10rpx;
}
.myRecommend .main-list image {
      width: 90rpx;
      height: 90rpx;
      margin-top: 5rpx;
}
.myRecommend .main-list button {
      height: 54rpx;
      line-height: 1.3;
      padding: 12rpx 25rpx;
      font-size: 26rpx;
      color: #fff;
      border-radius: 54rpx;
      background-image: linear-gradient(-90deg, #ff764c 0%, #ffa977 100%);
}
.myRecommend .main-list button.finished {
        opacity: 0.6;
}
.myRecommend .main-list .content {
      box-sizing: border-box;
      -webkit-flex: 1;
              flex: 1;
      padding: 0 20rpx;
      overflow: hidden;
}
.myRecommend .main-list .content .title {
        font-size: 28rpx;
        color: #815f34;
        font-weight: bold;
}
.myRecommend .main-list .content .title text {
          color: #fff;
          font-size: 28rpx;
          border-radius: 20rpx 20rpx 20rpx 0;
          background: #ff7e53;
          padding: 5rpx 10rpx;
          margin-left: 14rpx;
          font-weight: normal;
          vertical-align: 0.2em;
}
.myRecommend .main-list .content .text {
        font-size: 26rpx;
        color: #815f34;
}
.myRecommend .main-list .share {
      font-size: 24rpx;
      color: #815f34;
}
.myRecommend .main-list .share > view {
        font-size: 24rpx;
        color: #815f34;
        text-align: right;
}

