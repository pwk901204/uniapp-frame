.login-form-item .login-input{
	font-size: 30rpx;
	line-height: 30rpx;
	color: #999999;
}
.login-btn{
	margin-top: 69rpx;
}
.login-btn button{
	height: 91rpx;
	line-height: 91rpx;
	border-radius: 91rpx;
	background-color: #3167d9;
	border:none;
	color: #FFFFFF;
}
