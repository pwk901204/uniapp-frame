page{
	height: 100%;
}
.login-page{
	width: 100%;
	height: 100%;
	position: relative;
	overflow: hidden;
}
.bg-image{
	width: 100%;
	height: 100%;
	position: fixed;
	z-index: -1;
}
.login-header{
	width: 427rpx;
	height: 222rpx;
	margin: 30rpx auto 60rpx;
}
.login-header image{
	width: 100%;
	height: 100%;
}
.login-form{
	position: absolute;
	width: 100%;
	top: 30%;
	padding: 0 30rpx;
	box-sizing: border-box;
}
.login-form form{
	display: block;
	box-sizing: border-box;
}
.login-form .input-box {
	position: relative;
	border-radius: 10rpx;
	background: #FFFFFF;
	box-shadow:0px 0px 39rpx rgba(213, 213, 213, 0.4);
}
.login-form .input-box .form-bg{
	position: absolute;
	top: -35rpx;
	left: -35rpx;
	width: 100%;
	height: 308rpx;
	z-index: 0;
}
.login-form .input-box .form-bg image{
	width: 100%;
	height: 100%;
}
.login-form-item{
	-webkit-align-items: center;
	        align-items: center;
	padding: 30rpx;
	border-bottom: 1px solid #f0f0f0;
}
.login-form-item:last-child{
	border-bottom: none;
}
.login-form-item .input-icon{
	width: 36rpx;
	height: 45rpx;
}
